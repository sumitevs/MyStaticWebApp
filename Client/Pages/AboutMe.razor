@page "/AboutMe"

<div class="row">
    <RadzenCard Class="rz-background-color-danger-dark rz-my-12 rz-mx-auto" Style="max-width: 540px">
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.Start" Gap="1rem" Class="rz-p-4">
            <RadzenImage Path="./images/mypic.jpg" Style="width: 100px; height: 100px; border-radius: 50%;" />
            <RadzenStack Gap="0">
                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-2 rz-my-0">Name</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1" class="rz-color-black"><b>Sumit Saseendran</b></RadzenText>
                <RadzenText TextStyle="TextStyle.Overline" class="rz-display-flex rz-mt-4 rz-mb-0">Occupation</RadzenText>
                <RadzenText TextStyle="TextStyle.Body1" class="rz-color-black"><b>Software Engineer</b></RadzenText>
            </RadzenStack>
        </RadzenStack>
        <RadzenCard class="rz-background-color-danger-darker rz-shadow-0 rz-border-radius-0 rz-p-8" style="margin: 1rem calc(-1 * var(--rz-card-padding));">
            <RadzenText TextStyle="TextStyle.H6" class="rz-color-on-primary-light"><strong>Other Information</strong></RadzenText>
            <RadzenRow RowGap="0">
                <RadzenColumn SizeSM="4">
                    <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">Country</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="rz-color-danger-light"><b>India</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">City</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="rz-color-danger-light"><b>Bangalore</b></RadzenText>
                </RadzenColumn>
                <RadzenColumn SizeSM="8">
                    <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">Area of Interest</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="rz-color-danger-light"><b>OOP / Programming / .NET stuff</b></RadzenText>
                    <RadzenText TextStyle="TextStyle.Overline" class="rz-color-on-primary-light rz-display-flex rz-mt-4 rz-mb-0">Reach me</RadzenText>
                    <RadzenText TextStyle="TextStyle.Body1" class="rz-color-danger-light"><b>sumitevs@gmail.com</b></RadzenText>
                </RadzenColumn>
            </RadzenRow>
        </RadzenCard>
        <RadzenStack Orientation="Orientation.Horizontal" JustifyContent="JustifyContent.End" Gap="0">
            @*<RadzenButton Variant="Variant.Text" class="rz-text-secondary-color" Text="Cancel" />
            <RadzenButton Variant="Variant.Text" Text="Send" />*@
        </RadzenStack>
    </RadzenCard>
</div>