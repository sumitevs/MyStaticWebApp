<div class="top-row ps-3 navbar navbar-dark">
    <div class="container-fluid">
        <a class="navbar-brand" href="">BeatTheCode.in</a>
        <button title="Navigation menu" class="navbar-toggler" @onclick="ToggleNavMenu">
            <span class="navbar-toggler-icon"></span>
        </button>
    </div>
</div>

<div class="position-static @NavMenuCssClass" @onclick="ToggleNavMenu">
    <nav class="flex-column">
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="" Match="NavLinkMatch.All">
                <span class="oi oi-home" aria-hidden="true"></span> Home
            </NavLink>
        </div>
        <div class="nav-item px-3" @onclick:stopPropagation="true">
            <a class="nav-link" @onclick="ToggleChapters">
                <span class="oi oi-book" aria-hidden="true"></span> Chapters
            </a>
            @if (chaptersExpanded)
            {
                <div class="nav-item px-3">
                    <a class="nav-link" href="problemstatement">
                        Problem
                    </a>
                </div>
                <div class="nav-item px-3">
                    <a class="nav-link" href="#">
                        Prerequisites
                    </a>
                </div>
                <div class="nav-item px-3">
                    <a class="nav-link" href="#">
                        Solution thinking
                    </a>
                </div>
            }
            
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="counter">
                <span class="oi oi-plus" aria-hidden="true"></span> Stories
            </NavLink>
        </div>
        <div class="nav-item px-3">
            <NavLink class="nav-link" href="fetchdata">
                <span class="oi oi-list-rich" aria-hidden="true"></span> Reach me
            </NavLink>
        </div>
        
    </nav>
</div>

@code {
    private bool collapseNavMenu = true;
    private bool chaptersExpanded = false;

    private string? NavMenuCssClass => collapseNavMenu ? "collapse" : null;

    private void ToggleNavMenu()
    {
        collapseNavMenu = !collapseNavMenu;     
    }

    private void ToggleChapters()
    {
        chaptersExpanded = !chaptersExpanded;
    }
}
